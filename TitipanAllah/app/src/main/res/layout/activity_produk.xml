<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/produk_card_view"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    tools:context=".produk">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgproduk"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/namaproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/imgproduk"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/imgproduk"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:text="Nama Produk"/>

        <TextView
            android:id="@+id/deskripsiproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/imgproduk"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/imgproduk"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/namaproduk"
            android:text="Deskripsi Produk"/>

        <TextView
            android:id="@+id/hargaproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/imgproduk"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/imgproduk"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/deskripsiproduk"
            android:text="Harga"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>