<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nota">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logonota" />

        <TextView
            android:id="@+id/textview2"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nama Produk"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textview3"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:layout_toRightOf="@+id/textview2"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textview4"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:layout_toRightOf="@+id/textview3"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textview5"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Total Bayar"
            android:layout_toRightOf="@+id/textview4"
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/trxnamaproduk"
            android:layout_below="@+id/textview2"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/trxharga"
            android:layout_below="@id/textview3"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/trxnamaproduk"/>

        <TextView
            android:id="@+id/trxjumlah"
            android:layout_below="@+id/textview4"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/trxharga"/>

        <TextView
            android:id="@+id/trxjumlahharga"
            android:layout_below="@+id/textview5"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Total Harga"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/trxjumlah"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_below="@+id/imageView"
            android:textStyle="bold"
            android:text="Data Pembeli"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/namanota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/imageView"
            android:text="Nama Pembeli    :"/>

        <TextView
            android:id="@+id/namapembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="175dp"
            android:layout_toRightOf="@+id/namanota"
            android:hint="nama"/>

        <TextView
            android:id="@+id/hpnota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/namanota"
            android:text="No.Handphone   :"/>

        <TextView
            android:id="@+id/nohppembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/namapembeli"
            android:layout_toRightOf="@+id/hpnota"
            android:hint="no.hp"/>


        <TextView
            android:id="@+id/alamatnota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/hpnota"
            android:text="Alamat Pembeli  :"/>

        <TextView
            android:id="@+id/almtpembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/alamatnota"
            android:layout_below="@+id/nohppembeli"
            android:hint="alamat pembeli"/>


        <ImageView
            android:id="@+id/bca"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/alamatnota"
            android:src="@drawable/bca"/>

        <TextView
            android:id="@+id/norekbca"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="7723564"
            android:textAlignment="center"
            android:layout_below="@+id/bca"/>

        <ImageView
            android:id="@+id/mandiri"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/alamatnota"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bca"
            android:src="@drawable/mandiri"/>

        <TextView
            android:id="@+id/norekmandiri"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/mandiri"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/norekbca"
            android:text="5545617"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/bni"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/alamatnota"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/mandiri"
            android:src="@drawable/bankbni"/>

        <TextView
            android:id="@+id/norekbni"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/bni"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/norekmandiri"
            android:text="4983871"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/ket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/norekmandiri"
            android:text="* Silahkan Anda Transfer Total Bayar Diatas Ke No Rekening yang sudah tersedia A/n Dannar Restu Pamungkas"
            android:textColor="@color/black"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/cetak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ket"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:text="Cetak"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/ket"
                android:layout_toRightOf="@+id/cetak"
                android:text="Upload bukti "/>


</RelativeLayout>